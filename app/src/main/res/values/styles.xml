<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBg">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/weather_pm</item>
        <item name="android:textColor">#065D72</item>
    </style>

    <style name="weatherTv">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/weather_tv</item>
    </style>

    <style name="weatherTv2">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/weather_tv3</item>
    </style>

    <style name="mainTv">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mainTv2">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mainTv3" parent="mainTv">
        <item name="android:background">@drawable/main_tv</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mainTv4" parent="mainTv">
        <item name="android:background">@drawable/main_tv2</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="loginET">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/white2</item>
    </style>

    <style name="loginTv">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:background">@color/orange_transparent</item>
    </style>

    <style name="setRadioButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/set_selected</item>
        <item name="android:button">@null</item>
    </style>

    <style name="setRadioButton2">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/set_selected</item>
        <item name="android:button">@null</item>
    </style>
</resources>
